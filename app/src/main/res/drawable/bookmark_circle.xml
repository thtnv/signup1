<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Vòng tròn bên ngoài -->
    <item>
        <shape android:shape="oval">
            <solid android:color="#FFFFFF"/>
            <stroke android:width="2dp" android:color="#000000"/>
        </shape>
    </item>

    <!-- Biểu tượng bookmark bên trong, căn giữa -->
    <item
        android:drawable="@drawable/bookmark_icon"
        android:gravity="center"
        android:left="10dp"
        android:top="10dp"
        android:right="10dp"
        android:bottom="10dp"/>
</layer-list>
